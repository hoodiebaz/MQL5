// Call to action
Print("Candle is ",  bullish_or_bearish());

// Functions
string bullish_or_bearish()
  {
   double open  = candle_open_price(1);
   double close = candle_close_price(1);
   if(open < close)
     {
      return "Bullish";
     }
   if(open > close)
     {
      return "Bearish";
     }
   return "Neutral";
  }

double candle_open_price(int bars_back)
  {
   return iOpen(Symbol(), PERIOD_CURRENT, bars_back);
  }
double candle_close_price(int bars_back)
  {
   return iClose(Symbol(), PERIOD_CURRENT, bars_back);
  }
